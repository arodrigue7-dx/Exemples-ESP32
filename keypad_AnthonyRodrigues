#include <Keypad.h>

const uint8_t ROWS = 4;
const uint8_t COLS = 4;

char keys[ROWS][COLS] = {
  { '1', '2', '3', 'A' },
  { '4', '5', '6', 'B' },
  { '7', '8', '9', 'C' },
  { '*', '0', '#', 'D' }
};

uint8_t rowPins[ROWS] = { 19, 18, 5, 17 };
uint8_t colPins[COLS] = { 16, 4, 2, 15 };

Keypad keypad = Keypad(makeKeymap(keys), rowPins, colPins, ROWS, COLS);

const String password = "1234";  // Contrasenya correcta
String inputPassword = "";       // Contrasenya introduïda

void setup() {
  Serial.begin(9600);
  Serial.println("Sistema de validació de password");
  Serial.println("Introdueix la contrasenya de 4 dígits:");
}

void loop() {
  char key = keypad.getKey();

  if (key) {
    if (key == '#') {  // Tecla # per validar
      if (inputPassword == password) {
        Serial.println("Contrasenya CORRECTA. Accés permès.");
      } else {
        Serial.println("Contrasenya INCORRECTA. Torna-ho a provar.");
      }
      inputPassword = "";  // Reinicia l'entrada
      Serial.println("Introdueix una nova contrasenya:");
    } else if (key == '*') {  // Tecla * per esborrar
      inputPassword = "";
      Serial.println("Entrada esborrada. Torna a començar.");
    } else {
      inputPassword += key;
      Serial.print("*");  // Mostra asteriscs per seguretat
      if (inputPassword.length() == 4) {
        Serial.println();  // Salt de línia quan arriba a 4 dígits
      }
    }
  }
}
