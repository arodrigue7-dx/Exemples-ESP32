#include <WiFi.h>           // Librería para conectarse a WiFi
#include <WebServer.h>      // Librería para crear un servidor web

const char* ssid = "Wokwi-GUEST";  // Nombre de la red WiFi (en Wokwi)
const char* password = "";          // Contraseña WiFi (vacía en Wokwi)

WebServer server(80);       // Crea servidor web en puerto 80 (como internet)

const int ledPin = 2;       // Pin donde está conectado el LED
bool ledState = LOW;        // Estado actual del LED (apagado al inicio)
bool blinking = false;      // Controla si el LED está parpadeando
unsigned long previousMillis = 0;  // Para medir tiempo en parpadeo
const long interval = 500;  // Tiempo de parpadeo: 500ms = medio segundo

void handleRoot() {
  // Esta función crea la página web principal
  String html = "<!DOCTYPE html><html><head><meta name='viewport' content='width=device-width, initial-scale=1'>";
  html += "<style>body{font-family:Arial;text-align:center;margin-top:50px;}";
  html += "button{padding:15px 25px;margin:10px;font-size:18px;}</style></head><body>";
  html += "<h1>Control LED desde ESP32</h1>";
  html += "<p>LED actual: " + String(ledState ? "ENCENDIDO" : "APAGADO") + "</p>";
  
  // Botones que redirigen a diferentes URLs
  html += "<button onclick=\"location.href='/on'\">ENCENDER</button>";
  html += "<button onclick=\"location.href='/off'\">APAGAR</button>";
  html += "<button onclick=\"location.href='/blink'\">PARPADEAR</button>";
  
  html += "</body></html>";
  
  // Envía la página web al navegador
  server.send(200, "text/html", html);
}

void handleOn() {
  // Esta función se ejecuta cuando presionas "ENCENDER"
  ledState = HIGH;          // Cambia estado a encendido
  blinking = false;         // Para cualquier parpadeo
  digitalWrite(ledPin, ledState);  // Enciende físicamente el LED
  
  // Redirige de vuelta a la página principal
  server.sendHeader("Location", "/");
  server.send(303);         // Código 303 = "See Other" (redirección)
}

void handleOff() {
  // Esta función se ejecuta cuando presionas "APAGAR"
  ledState = LOW;           // Cambia estado a apagado
  blinking = false;         // Para cualquier parpadeo
  digitalWrite(ledPin, ledState);  // Apaga físicamente el LED
  
  // Redirige de vuelta a la página principal
  server.sendHeader("Location", "/");
  server.send(303);
}

void handleBlink() {
  // Esta función se ejecuta cuando presionas "PARPADEAR"
  blinking = true;          // Activa el modo parpadeo
  
  // Redirige de vuelta a la página principal
  server.sendHeader("Location", "/");
  server.send(303);
}

void setup() {
  // Esta función se ejecuta UNA SOLA VEZ al iniciar
  
  Serial.begin(115200);     // Inicia comunicación serial (para depurar)
  
  pinMode(ledPin, OUTPUT);  // Configura el pin del LED como SALIDA
  digitalWrite(ledPin, LOW); // Asegura que el LED empiece apagado

  // Conecta a la red WiFi
  WiFi.begin(ssid, password);
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");      // Muestra puntos mientras se conecta
  }
  
  // Muestra información cuando se conecta
  Serial.println("\nConectado a WiFi");
  Serial.print("IP: ");
  Serial.println(WiFi.localIP());  // Muestra la dirección IP del ESP32

  // Configura las rutas del servidor web:
  server.on("/", handleRoot);      // Página principal
  server.on("/on", handleOn);      // Ruta para encender LED
  server.on("/off", handleOff);    // Ruta para apagar LED
  server.on("/blink", handleBlink);// Ruta para parpadear LED
  
  server.begin();            // Inicia el servidor web
}

void loop() {
  // Esta función se repite CONSTANTEMENTE
  
  server.handleClient();     // Atiende a los clientes web (navegadores)
  
  // Control del parpadeo si está activado
  if (blinking) {
    unsigned long currentMillis = millis();  // Obtiene tiempo actual
    
    // Si ha pasado el intervalo de tiempo (500ms)
    if (currentMillis - previousMillis >= interval) {
      previousMillis = currentMillis;        // Reinicia el temporizador
      ledState = !ledState;                  // Cambia estado (ON↔OFF)
      digitalWrite(ledPin, ledState);        // Aplica cambio físico
    }
  }
}
