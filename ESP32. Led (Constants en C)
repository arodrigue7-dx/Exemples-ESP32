/*
  Proyecto: Blink con tiempos configurables
  Descripci√≥n: Parpadeo de un LED con tiempos personalizables para ON y OFF.

*/

// Definimos constantes para los pines
const int LED_PIN = 2;

// Variables para los tiempos
int tiempoOn = 1000;   // Tiempo encendido en ms
int tiempoOff = 500;   // Tiempo apagado en ms

void setup() {
  pinMode(LED_PIN, OUTPUT);
}

void loop() {
  digitalWrite(LED_PIN, HIGH);
  delay(tiempoOn);
  digitalWrite(LED_PIN, LOW);
  delay(tiempoOff);
}
